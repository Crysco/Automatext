<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.automatext.crysco.app.MainActivity$PlaceholderFragment"
    android:background="@drawable/chalkboard">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Automatext"
        android:id="@+id/textViewMainTitle"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textColor="@color/White"
        android:layout_marginTop="75dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/slider"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/textViewMainTitle"
        android:layout_alignLeft="@+id/relativeLayout"
        android:layout_alignStart="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto Reply"
            android:id="@+id/textViewAutoReply"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:clickable="true"
            android:textSize="24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/slider"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scheduled\nTexts"
            android:id="@+id/textViewScheduledTexts"
            android:lines="2"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:textSize="24dp" />

    </RelativeLayout>

</RelativeLayout>
